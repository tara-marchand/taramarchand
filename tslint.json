{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "interface-name": [true, "never-prefix"],
    // 'no-unused-variable' lint rule does not need to be set if 'noUnusedLocals'
    // & 'noUnusedParameters' compiler options enabled in tsconfig.json.
    "no-unused-variable": [false]
  },
  "linterOptions": { "exclude": ["*.js"] }
