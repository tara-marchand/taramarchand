{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../build/",
    "resolveJsonModule": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/fastify",
      "./node_modules/next",
      "./client/src"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
